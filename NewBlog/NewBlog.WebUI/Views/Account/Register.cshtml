@using NewBlog.WebUI.Models
@model Register
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutMin.cshtml";
    List<SelectListItem> roles = new List<SelectListItem>
    {
        new SelectListItem()
        {
            Text = "admin",
            Value = "admin"
        },
        new SelectListItem()
        {
            Text = "user",
            Value = "user"
        }
    };
}
<div class="container">
    <div class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            @using (Html.BeginForm())
            {
                <fieldset>
                    <h2 style="text-align:center; color: orange">Please Sign Up</h2>
                    <hr class="colorgraph">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    <div class="form-group" id="logininput">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control  input-lg", placeholder = "Login" })
                    </div>
                    <div class="form-group" id="logininput">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", placeholder = "Password" })
                    </div>
                    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-lg-offset-1 col-md-10">
                            <button class="btn btn-lg btn-success btn-block center-block">Sign Up</button>
                        </div>
                    </div>
</fieldset>
            }
</div>
    </div>
</div>