@using NewBlog.WebUI.Models
@using NewBlog.Domain.Entities;
@model ListViewModel

<div id="content">

    <h1>@ViewBag.Title</h1>

    @Html.Partial("_Pager", Model)

    @if (Model.Posts.Count > 0)
    {
        foreach (var post in Model.Posts)
        {
            @Html.Partial("_PostTemplate", post)
        }
    }
    else
    {
        <p>No posts found!</p>
    }

</div>

