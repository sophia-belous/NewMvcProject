<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Posts", "Blog", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Posts", "Posts")</li>
                    <li>@Html.ActionLink("About", "About")</li>
                    <li>@Html.ActionLink("Contact", "Contact")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
            <!--/.navbar-collapse -->
        </div>
    </div>
    <div class="container">
        <div class="row">

            <!--/span-->
            <div class="col-md-9">
                @RenderBody()
            </div>
            <!--/span-->
            <div class="col-md-3">
                <div class="sidebar-nav-fixed pull-right affix">
                    @Html.Partial("_Search")
                    <div class="well">
                        <ul class="nav">
                            @Html.Action("Sidebars", "Blog")
                        </ul>
                    </div>
                    <!--/.well -->
                </div>
                <!--/sidebar-nav-fixed -->
            </div>
            <!--/span-->
        </div>
        <!--/row-->

        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>  
        </footer>
    </div>
    <!--/.fluid-container-->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
