@model IEnumerable<NewBlog.Domain.Entities.Comment>
       
<div class="comments-container">
    <ul id="comments-list" class="comments-list">
        @{
            var author = User.IsInRole("admin");
            string style = @author ? "by-author" : "";

        }
        @foreach (var item in Model)
        {
            <li>
                <div class="comment-main-level">
                    <div class="comment-avatar"><img src="http://i9.photobucket.com/albums/a88/creaticode/avatar_1_zps8e1c80cd.jpg" alt=""></div>
                    <div class="comment-box">
                        <div class="comment-head">
                            <h6 class="comment-name @style">item.User.Username</h6>
                            <span>item.CommentedOn.ToLongTimeString()</span>
                        </div>
                        <div class="comment-content">
                            @Html.Raw(item.Description)
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>





